<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray"
    tools:context=".MainActivity">

    <!--    ScoreBoard-->
    <TextView
        android:id="@+id/score_board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="@string/score_board"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    View Result-->
    <TextView
        android:id="@+id/tv_result"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:text="@string/result"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:background="@drawable/ic_rectangle_result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/score_board" />

    <!--    Score-->
    <LinearLayout
        android:id="@+id/linear_score"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="430dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/toolbar"
        app:layout_constraintTop_toBottomOf="@id/tv_result">

        <RelativeLayout
            android:id="@+id/tv_user"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_frame_user">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/score"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:gravity="center"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tv_com"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:background="@drawable/ic_frame_com">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/score"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:gravity="center"/>
        </RelativeLayout>

    </LinearLayout>

    <!--    ImageView Computer-->
    <ImageView
        android:id="@+id/iv_com"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/ic_scissors"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_score"/>

<!--    ImageView User-->
    <ImageView
        android:id="@+id/iv_user"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/ic_rock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_com"
        app:layout_constraintBottom_toTopOf="@id/toolbar"/>

    <!--    Button Action-->
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/ic_rounded_rectangle"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <RelativeLayout
            android:id="@+id/btn_home"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="30dp"
            android:background="@drawable/ic_rectangle_orange">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_baseline_home" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_rock"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_rectangle_2">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/ic_rock" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_paper"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_rectangle_2">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/ic_paper" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_scissor"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_rectangle_2">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/ic_scissors" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_rematch"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:background="@drawable/ic_rectangle_green">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:background="@drawable/ic_replay_arrows" />
        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>